%p
  %strong Checklist Title:
  = @checklist.title
%p
  %strong Checklist Description:
  = @checklist.description


%table.table
  %thead
    %tr
      %th Question Title
      %th Description

  %tbody.fields
    - @checklist.questions.each do |question|   
      %tr
        %td 
          = question.title

        %td 
          = question.description


= link_to 'Edit', edit_checklist_path(@checklist), class: 'btn'
= link_to 'To Checklists Page', checklists_path, class: 'btn'
