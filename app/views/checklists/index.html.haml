%p#notice
  = notice
  
%h1 Checklists

%table
  %thead
    %tr
      %th Title
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @checklists.each do |checklist|	
      %tr
        %td
          = link_to checklist do
            = checklist.title
        %td
          = link_to checklist do
            = checklist.description
        %td
          = link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Checklist', new_checklist_path        


