%p#notice
  = notice
  
%h2 Audits

%table
  %thead
    %tr
      %th 
        Checklist name
      %th 
        Last updated timestamp
      %th{:colspan => "3"}
        Actions 
  %tbody
    - @audits.each do |audit|	
      %tr
        %td
          = link_to audit do
            = @checklists.find(audit.checklist_id).title
        %td
          = link_to audit do
            = audit.updated_at
        %td
          = link_to 'Edit', edit_audit_path(audit)
          = link_to 'Destroy', audit, method: :delete, data: { confirm: 'Are you sure?' }

= paginate @audits

= render 'fill_checklist'
