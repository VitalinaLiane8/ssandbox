%p#notice
  = notice
  
%h1 Audits

%table
  %thead
    %tr
      %th 
        Checklist name
      %th 
        Last updated timestamp
      %th{:colspan => "3"}
        Actions 
  %tbody
    - @audits.each do |audit|	
      %tr
        %td
          = link_to audit do
            Checklist name
        %td
          = link_to audit do
            action.updated_at
        %td
          = link_to 'Destroy', audit, method: :delete, data: { confirm: 'Are you sure?' }

=paginate @audits
