%p#notice
  = notice
  
%h2 Audits

%table
  %thead
    %tr
      %th 
        Checklist name
      %th 
        Last updated timestamp
      %th{:colspan => "3"}
        Actions 
  %tbody
    - @audits.each do |audit|	
      %tr
        %td
          = link_to audit do
            = @checklists.find(audit.checklist_id).title
        %td
          = link_to audit do
            = audit.updated_at
        %td
          = link_to 'Edit', add_audit_fields_checklist_path(@checklists.find(audit.checklist_id)), class: 'btn teal lighten-2'
          = link_to 'Destroy', audit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn red lighten-2'

= paginate @audits

= render 'fill_checklist'
